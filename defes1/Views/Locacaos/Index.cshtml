@model IEnumerable<defes1.Models.LocacaoModel>

@{
    ViewBag.Title = "Locações";
}

<h2>Locações</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Filme
        </th>
        <th>
            Cliente
        </th>
        <th>
            Data
        </th>
        <th>
            Usuário
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FilmeNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClienteNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocacaoData)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsuarioLogin)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.LocacaoID }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.LocacaoID })
        </td>
    </tr>
    }

</table>
